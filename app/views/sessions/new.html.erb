<style type="text/css">
    body {
      background-color: #DADADA;
    }
    body > .grid {
      height: 100%;
    }
    .image {
      margin-top: -100px;
    }
    .column {
      max-width: 450px;
    }
  </style>
<body>

<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <div class="content">
        Log-in to your account
      </div>
    </h2>

    <%= form_tag '/login', {html: {class: 'ui large form'}} do %>
      <div class="ui stacked segment">
        <div class="five wide field">
            <div class="ui left icon input">
            <i class="user icon"></i>
            <%= text_field_tag :username, nil, placeholder: 'Username' %><br>
          </div>
            <br>
              <br>
        </div>
        <div class="five wide field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= text_field_tag :password, nil, placeholder: 'Password' %><br>
          </div>
        </div>
        <br>
        <%= submit_tag 'Log in' %>
      </div>


<%end%>

    <div class="ui message">
      New to us? <a href=" <%= new_user_path %>">Sign Up</a>
    </div>
  </div>
</div>




</body>
