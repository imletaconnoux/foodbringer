<!DOCTYPE html>

<html>
<head>
  <title>FoodBringer</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>

  <style>
      /* Always set the map height explicitly to define the size of the div
       * element that contains the map. */
      #map {
        height: 100%;
      }
      /* Optional: Makes the sample page fill the window. */
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
    </style>
</head>


  <div class="ui menu">
    <div class="header item">
      <a href = "<%= root_path %>">
      FoodBringer
      </a>
    </div>
    <% if logged_in? %>
    <a href = "<%= orders_path %>" class="item">
      Order History
    </a>
    <a href = "<%= user_path(current_user) %>" class="item">
      Account
    </a>
    <a href = "<%= logout_path %>" data-method="delete" class="right aligned item">
      Log out
    </a>
    <% else %>
    <a href = "<%= login_path %>" class="item">
      Log in
    </a>
    <a href = "<%= new_user_path %>" class="item">
      Sign up
    </a>
    <% end %>
  </div>


  <body>
    <div class="ui raised very padded text container segment">
      <div class="ui raised very padded text container segment">
    <%= yield %>
  </div>
  </div>

  </body>
</html>
