<style type="text/css">
    body {
      background-color: #DADADA;
    }
    body > .grid {
      height: 100%;
    }
    .image {
      margin-top: -100px;
    }
    .column {
      max-width: 450px;
    }
    .landpage-image{
      height: 100%;
}

.landpage-image{
    background-image: url(newimage.png);
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
}
  </style>
<body>
<div class="ui inverted vertical segment landpage-image">
<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2><font color="white">Log in</font></h2>

    <%= form_tag '/login', {html: {class: 'ui large form'}} do %>
      <div class="ui stacked segment">
        <div class="five wide field">
            <div class="ui left icon input">
            <i class="user icon"></i>
            <%= text_field_tag :username, nil, placeholder: 'Username' %><br>
          </div>
            <br>
              <br>
        </div>
        <div class="five wide field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= password_field_tag :password, nil, placeholder: 'Password' %><br>
          </div>
        </div>
        <br>
        <%= submit_tag 'Log in' %>
      </div>


<%end%>

    <div class="ui message">
      <p>New to us?</p>
      <p><a href=" <%= new_user_path %>">Sign Up</a></p>
    </div>
  </div>
</div>
  </div>



</body>
